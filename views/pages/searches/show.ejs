<!DOCTYPE html>
<html lang="en">

<body>
    <%- include('../../layout/head')  %>
    <%- include('../../layout/header')  %>
    <div id="second-header-div">
        <h3>
            Search Results
        </h3>
    </div>

    <% arrayOfItems.forEach((value)=> { %>

        <div class="container">
            <div class="image">
                <img src="<%= value.thumbnail%>" alt="">
            </div>
            <div class="title-and-author">
                <h3>
                    <%= value.title%>
                </h3>
                <ul>

                    <li>
                        <%= value.authors%>
                    </li>

                </ul>
            </div>

            <div class="description">
                <p>
                    <%= value.description%>
                </p>
            </div>

            <form action="/books" method="POST">
                <input type="hidden" value="<%= value.title%>" name="title">
                <input type="hidden" value="<%= value.authors%>" name="authors">
                <input type="hidden" value="<%= value.description%>" name="description">
                <input type="hidden" value="<%= value.type%>" name="isbn">
                <input type="hidden" value="<%= value.thumbnail%>" name="image">
                <button type="submit">Add To Favorite</button>
            </form>

        </div>
        <% });%>

        <script>
            function myFunction() {
              var x = document.getElementById("myLinks");
              if (x.style.display === "block") {
                x.style.display = "none";
              } else {
                x.style.display = "block";
              }
            }
        </script>
</body>

</html>